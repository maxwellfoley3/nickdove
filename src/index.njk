layout: base.njk
title: Photo
---

<div class="prose prose-lg max-w-none">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Nick Dove</h1>
    
    <p class="text-xl text-gray-600 mb-8">
        Writer, photographer, and creative explorer. Welcome to my digital space where words and images converge.
    </p>

    <div class="space-y-8">
        <!-- Photo Collections Grid -->
        <div class="bg-white rounded-lg shadow-sm p-8">            
            <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6">
                {% for collection in photoCollections %}
                <a href="/photo/{{ collection.id }}/" class="group">
                    <h2 class="text-lg font-semibold text-gray-900  transition-colors">
                        {{ collection.title }}
                    </h2>
                    <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden mb-4">
                        <img 
                            src="/images/{{ collection.folder }}/1.jpg" 
                            alt="{{ collection.title }}"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>