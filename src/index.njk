    <h1 class="text-xl font-bold text-gray-900 mb-8">Photography</h1>
    <div class="space-y-8">
        <!-- Photo Collections Grid -->
        <div class="bg-white rounded-lg shadow-sm p-8">            
            <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6">
                {% for collection in photoCollections %}
                <a href="/photo/{{ collection.id }}/" class="group">
                    <h2 class="text-lg font-semibold text-gray-900  transition-colors">
                        {{ collection.title }}
                    </h2>
                    <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden mb-4">
                        <img 
                            src="/images/{{ collection.folder }}/1.jpg" 
                            alt="{{ collection.title }}"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>